@{
    ViewData["Title"] = "Регистрация";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card bg-dark text-white shadow-lg" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Регистрация</h3>

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label class="form-label">Имя пользователя</label>
                    <input name="username" class="form-control bg-secondary text-white" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Пароль</label>
                    <input name="password" type="password" class="form-control bg-secondary text-white" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Роль</label>
                    <select name="role" class="form-select bg-secondary text-white">
                        <option value="admin">Admin</option>
                        <option value="cashier">Cashier</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
            </form>

            @if (ViewBag.Errors != null)
            {
                <ul class="mt-3">
                    @foreach (var error in ViewBag.Errors)
                    {
                        <li class="text-danger">@error.Description</li>
                    }
                </ul>
            }
        </div>
    </div>
</div>