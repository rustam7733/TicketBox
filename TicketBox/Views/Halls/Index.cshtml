@model IEnumerable<TicketBox.Models.Hall>

@{
    ViewData["Title"] = "Управление залами";
}

<h2 class="text-center text-white mb-4">Управление залами</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">➕ Добавить зал</a>
</div>

<table class="table table-dark table-hover text-center">
    <thead>
        <tr>
            <th>Название</th>
            <th>Ряды</th>
            <th>Колонки</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hall in Model)
        {
            <tr>
                <td>@hall.Name</td>
                <td>@hall.Rows</td>
                <td>@hall.Columns</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hall.Id" class="btn btn-primary btn-sm">Изменить</a>
                    <a asp-action="Details" asp-route-id="@hall.Id" class="btn btn-info btn-sm">Подробнее</a>
                    <form asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@hall.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>