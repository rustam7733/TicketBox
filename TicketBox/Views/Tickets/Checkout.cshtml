@model List<TicketBox.Models.Ticket>
@{
    ViewData["Title"] = "Ваши билеты";
}

<div class="checkout-page">

    <style>
        .checkout-page {
            font-family: monospace;
            color: #000;
        }

            .checkout-page .ticket {
                max-width: 500px;
                background-color: #fff;
                border: 2px dashed #333;
                padding: 1.5rem;
                margin-bottom: 2rem;
                box-shadow: 0 0 10px rgba(0,0,0,0.1);
                color: #000;
            }

                .checkout-page .ticket h4 {
                    text-align: center;
                    margin-bottom: 1rem;
                    color: #000;
                }

                .checkout-page .ticket code {
                    background: #f5f5f5;
                    padding: 2px 4px;
                    border-radius: 3px;
                    color: #000;
                }

                .checkout-page .ticket hr {
                    margin-top: 1rem;
                    margin-bottom: 0.5rem;
                }

                .checkout-page .ticket .footer {
                    font-size: 0.9em;
                    text-align: center;
                    color: #000;
                }

            .checkout-page .alert {
                max-width: 500px;
                color: #000;
            }

            .checkout-page h2 {
                color: white;
                margin-bottom: 1.5rem;
            }
    </style>

    <h2>Ваши билеты</h2>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">@ViewBag.Success</div>
    }

    @foreach (var ticket in Model)
    {
        <div class="ticket">
            <h4>🎟️ Билет в кино</h4>
            <div><strong>Фильм:</strong> @ticket.Session.Movie.Title</div>
            <div><strong>Зал:</strong> @ticket.Session.Hall.Name</div>
            <div><strong>Начало:</strong> @ticket.Session.StartTime.ToString("g")</div>
            <div><strong>Ряд:</strong> @ticket.Row</div>
            <div><strong>Место:</strong> @ticket.Number</div>
            <div><strong>Цена:</strong> @ticket.Session.Price сум</div>
            <div><strong>Код билета:</strong> <code>@ticket.Code</code></div>
            <hr />
            <div class="footer">Спасибо за покупку!</div>
        </div>
    }

    <div class="text-end">
        <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
        <button onclick="window.print()" class="btn btn-outline-primary ms-2">🖨️ Печать</button>
    </div>

</div>
