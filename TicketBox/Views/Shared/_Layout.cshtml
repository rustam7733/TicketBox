@using Microsoft.AspNetCore.Identity
@using TicketBox.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TicketBox</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketBox.styles.css" asp-append-version="true" />
    <style>
        .seating-grid .seat.selected {
            border: 3px solid blue !important;
        }

        .navbar-brand:hover {
            transform: scale(1.05);
            transition: 0.2s ease-in-out;
        }

        .nav-link:hover {
            text-decoration: underline;
            transition: 0.2s;
        }

        footer a:hover {
            text-decoration: none;
            color: #ffc107;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">🎟️ TicketBox</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="manageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Управление
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="manageDropdown">
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="Index">Фильмы</a></li>
                                <li><a class="dropdown-item" asp-controller="Sessions" asp-action="Index">Сеансы</a></li>
                                <li><a class="dropdown-item" asp-controller="Tickets" asp-action="Index">Билеты</a></li>
                                <li><a class="dropdown-item" asp-controller="Tickets" asp-action="Scan">Сканировние билета</a></li>
                                <li><a class="dropdown-item" asp-controller="Halls" asp-action="Index">Залы</a></li>
                                @if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
                                {
                                    <li><a class="dropdown-item" asp-controller="UserManagement" asp-action="Index">Пользователи</a></li>
                                }
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-2">👤 @User.Identity?.Name</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Выход</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm me-2" asp-controller="Account" asp-action="Login">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">Регистрация</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-auto">
        <div class="container">
            &copy; 2025 - TicketBox |
            <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-underline">Политика конфиденциальности</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
